<link href="/css/new-game.css" rel="stylesheet">

<div id="newGame">
  <h2>Create a game</h2>

  <form method="POST" action="/newgame" enctype="application/json">
    <div id="variantSelection">
      Variant
      <select id="variant" name="variant">
        <option value="standard">Standard</option>
        <option value="jeroenvariant" disabled>JVDB</option>
        <option value="testing" disabled>Test</option>
      </select>
    </div>

    <div id="clockSettings">
      <h3>Clock settings</h3>
      Minutes per side:
      <span id="minutes">5</span>
      <input name="minutes" type="range" disabled="disabled" id="timerWhite"></input>
      <br>
      <br>
      Increment in seconds:
      <span id="increment">0</span>
      <input name="minutes" type="range" disabled="disabled" id="timerWhite"></input>
    </div>

    <div id="joinColor">
      <button type="submit" name="action" value="joinBlack">Join black</button>
      <button type="submit" name="action" value="joinWhite">Join white</button>
    </div>
  </form>
</div>
